<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="30dp">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderViewHomeHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderStartAutoCycle="true"
        app:sliderScrollTimeInSec="1"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="1dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/white"
        app:sliderIndicatorUnselectedColor="@color/placehold_gray"/>

    <TextView
        android:id="@+id/textViewHomeOngoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/listitem_anime"/>

    <TextView
        android:id="@+id/textViewHomeRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended For You"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id = "@+id/imageViewHomeRecommend"
                android:layout_width="90dp"
                android:layout_height="128dp"
                android:background="@color/placehold_gray"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:id="@+id/linearLayoutHomeRecommendationsTitleAndScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="2dp">

                <TextView
                    android:id="@+id/textViewHomeRecommendationsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textViewHomeRecommendationsScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="2dp"
                    android:text="Because you like:"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>

                <TextView
                    android:id="@+id/textViewHomeRecommendationsBecauseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anime Title"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="2dp"
                android:layout_below="@+id/linearLayoutHomeRecommendationsTitleAndScore">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synopsis"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textViewHomeRecommendationsSynopsis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="italic"
                    android:textSize="11sp"
                    android:text=""
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:singleLine="false"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewHomeLoginText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login to get personalized recommendations based on the anime you love."
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingTop="25dp"/>
    <Button
        android:id="@+id/buttonHomeLogin"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_gravity="center"
        android:backgroundTint="@color/main_color"/>
    <Button
        android:id="@+id/buttonHomeLogout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Logout"
        android:layout_gravity="center"
        android:backgroundTint="@color/warning"/>
</LinearLayout>