<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="50dp">

    <TextView
        android:id="@+id/textViewHomeGuestOngoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingBottom="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeGuestOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/listitem_anime"/>

    <TextView
        android:id="@+id/textViewHomeGuestRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingBottom="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeGuestRecommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/listitem_anime"/>

    <TextView
        android:id="@+id/textViewHomeGuestLoginText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login to get personalized recommendations based on the anime you love."
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingTop="5dp"/>
    <Button
        android:id="@+id/buttonHomeGuestLogin"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_gravity="center"
        android:backgroundTint="@color/main_color"/>
    <Button
        android:id="@+id/buttonHomeGuestLogout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Logout"
        android:layout_gravity="center"
        android:backgroundTint="@color/warning"/>
</LinearLayout>