<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewHomeGuestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime x App"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeGuestOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@+id/textViewHomeGuestTitle"
        android:paddingTop="50dp"
        tools:listitem="@layout/listitem_anime"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeGuestRecommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@+id/recyclerViewHomeGuestOngoing"
        android:paddingTop="50dp"
        tools:listitem="@layout/listitem_anime"/>

    <TextView
        android:id="@+id/textViewHomeGuestLoginText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login to get personalized recommendations based on the anime you love."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/recyclerViewHomeGuestRecommendations"
        android:paddingTop="100dp"/>
    <Button
        android:id="@+id/buttonHomeGuestLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewHomeGuestLoginText"
        android:backgroundTint="@color/main_color"/>

</RelativeLayout>